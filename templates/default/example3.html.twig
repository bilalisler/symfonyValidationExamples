{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <br>
        <div class="row">
            <div class="col-md-6" style="margin: 0 auto">
                {% if errors|length > 0 %}
                    <ul>
                        {% for error in errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}

                <form class="needs-validation" method="POST">

                    <h4 class="mb-3">Register</h4>

                    <div class="row gy-3">
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label">First Name</label>
                            <input type="text" class="form-control" name="firstName" id="name">
                        </div>
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label">Last Name</label>
                            <input type="text" class="form-control" name="lastName" id="name">
                        </div>
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="name">
                        </div>
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label">Password 2</label>
                            <input type="password" class="form-control" name="password2" id="name">
                        </div>
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label">Email</label>
                            <input type="text" class="form-control" name="email" id="name">
                        </div>
                    </div>

                    <hr>

                    <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
